<% include partials/header %>

  <h1 class="text-center mb-4">Please Sign In</h1>
  <div class="row">
    
    <div class="col-lg-12" style="max-width: 400px; margin: 0 auto">
      <form action="/login" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Log In</button>
        </div>
      </form>
    
      <p class="text-center"><a href="/forgot">Forgot your password? Click here!</a></p>
      <p class="text-center"><a href="/register">Don't have an account? Click here to register</a></p>
    </div>
    
    
  </div>

<% include partials/footer %>