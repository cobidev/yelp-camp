<% include ../partials/header %>

<div class="container">
  <h2 class="text-center">Edit Comment</h2>
  <div class="row">
    <div class="col-lg-12" style="max-width: 400px; margin: 25px auto">
      
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-success btn-block">Update</button>
        </div>
      </form>
      
      <a href="/campgrounds/<%= campground_id %>">Go Back!</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>