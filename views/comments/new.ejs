<% include ../partials/header %>

<div class="container">
  <h2 class="text-center">Add Comment to <strong class=""><%= campground.name %></strong> </h2>
  <div class="row">
    <div class="col-lg-12" style="max-width: 400px; margin: 25px auto">
      
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Add comment">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit</button>
        </div>
      </form>
      
      <a href="/campgrounds/<%= campground._id %>">Go Back!</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>