<% include ../partials/header %>

  <h1 class="text-center">Edit <%= campground.name %></h1>
  <div class="row">
    <div class="col-lg-12" style="max-width: 400px; margin: 25px auto">
      
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Name</label>
          <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input class="form-control" type="file" accept="image/*" name="image">
        </div>
        <div class="form-group">
          <label>Price</label>
          <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" set="0.01">
        </div>
        <div class="form-group">
          <label>Description</label>
          <input class="form-control" type="text" name="campground[description]" value="<%= campground.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-success btn-block">Update</button>
        </div>
      </form>
      
      <a href="/campgrounds//<%= campground._id %>">Go Back!</a>
    </div>
  </div>
<% include ../partials/footer %>