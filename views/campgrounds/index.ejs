<% include ../partials/header %>

  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelp Camp!</h1>
        <p>Hand-picked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        </p>
        <!--SEARCHBOX-->
        <p>
          <form class="form-inline" action="/campgrounds" method="GET">
            <div class="form-grup">
              <input class="form-control" type="text" name="search" placeholder="Campground search...">
              <input class="btn btn-default" type="submit" value="Search">
            </div>
          </form>
        </p>
    </div>
  </header>
  
  <div class="row text-center">
    <% campgrounds.forEach(function(camp){ %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card">
          <img class="card-img-top" src="<%=  camp.image  %>" alt="<%= camp.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= camp.name %></h5>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  
  
  

<% include ../partials/footer %>